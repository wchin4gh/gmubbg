@model VOAprototype.Models.ITFunction

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Html.ValueFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(model => model.Description, new { @class = "required", style = "width: 100%; max-width: 100%; height: 300px" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.Unigram)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

