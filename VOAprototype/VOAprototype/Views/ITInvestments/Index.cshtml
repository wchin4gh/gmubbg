@model IEnumerable<VOAprototype.Models.ITInvestment>

@{
    ViewData["Title"] = "Index";
}

<h1>IT Investments</h1>
<form asp-controller="PurchaseOrders" asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<form method="post" enctype="multipart/form-data" asp-controller="PurchaseOrders" asp-action="Upload">
    <div class="form-group">
        <div class="row">
            <input type="file" name="file" />
            <input type="submit" value="Upload" /> |
            <button asp-action="Export">Export</button>
        </div>
    </div>
</form>
<p>
    <a asp-action="Create">Submit New IT Investment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ITFunction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalDate)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderByDescending(m => m.EntryDate.Date))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Entity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ITFunction)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Application)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Units)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovalDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create">Submit New Purchase Order</a>
</p>
